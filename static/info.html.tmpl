{{ template "header" . }}

<div class="header clearfix">
  <nav>
    <ul class="nav nav-pills pull-right">
      <li role="presentation" class="active"><a href="/">Home</a></li>
      <li role="presentation"><a href="/help">Help</a></li>
      <li role="presentation"><a href="/signout">Sign Out</a></li>
    </ul>
  </nav>
  <h3 class="text-muted">My Vibe Camp</h3>
</div>

<div class="jumbotron">
  <h2>Hey {{ .Name }}</h2>
    {{ if eq .Cabin "" }}
      No cabin assigned yet.
    {{ else }}
      You're in <strong>Cabin {{ .Cabin }}</strong> with
      <ul>
          {{ range $val := .Cabinmates }}
            <li>{{ $val }}</li>
          {{ end }}
      </ul>
    {{ end }}
</div>

{{ template "footer" }}
